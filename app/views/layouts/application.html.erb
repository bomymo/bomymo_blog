<!DOCTYPE html>
<html>
  <head>
    <title>BomymoBlog</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-warning" role="alert"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <nav class="navbar navbar-inverse custom-navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div><!-- end navbar-header -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="<%= blogposts_path %>">Home</a></li>
            <% if user_signed_in? %>
              <li><a href="<%= new_blogpost_path %>">New</a></li>
            <% end %>
            <li>
              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
              <% else %>
                <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li>
          </ul>
        </div><!-- end nav -->
      </div><!-- end nav container -->
    </nav><!-- end navbar -->

    <%= yield %>
  
    <footer>
      <div class="footer-format">
        <p>&copy; 2017 Robert Myers-Morgan</p>
      </div>
    </footer>
    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>    
  </body>
</html>
