<div class="col-md-offset-2 col-md-8 col-md-offset-2">
  <h1>Bomymo Blog</h1>
  <h3>Blog your heart out</h3>
</div><!-- /header-indent -->

<div class="col-md-offset-2 col-md-8 col-md-offset-2 work-box bottom-of-page">
  <% @blogposts.each do |blogpost| %>
    <p class="display-subject"><a href="/blogposts/<%= blogpost.id %>"><%= blogpost.subject %></a></p>
    <p class="entry-summary">
      <%= blogpost.blogentry[0, 100] %>...
      <div class="align-right">
        <% if current_user %>
          <% if blogpost.user_id == current_user.id %>
            <%= link_to 'Edit', edit_blogpost_path(blogpost) %>
            <%= link_to 'Delete', blogpost, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>
      </div>
    </p>

  <% end %>
</div><!--/work-box -->


